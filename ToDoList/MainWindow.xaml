<Window x:Class="TodoListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="To-Do List" Height="450" Width="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <TextBox x:Name="TaskTextBox" Width="200"/>
            <Button x:Name="AddTaskButton" Content="Add Task" Click="AddTaskButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
        <ListBox x:Name="TasksListBox" />
    </DockPanel>
</Window>
